  ADMBaseX
  CarpetX
  IOUtil
  #Particles
  TestNuPcsArdBH
"

Cactus::presync_mode = "mixed-error"

CarpetX::verbose = yes
CarpetX::poison_undefined_values = yes

CarpetX::xmin = +2.5
